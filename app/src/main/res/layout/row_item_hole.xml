<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ID of entity in row item -->
    <TextView
        android:id="@+id/txtv_hole_pkey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <!-- Hole number -->
    <TextView
        android:id="@+id/txtv_hole_number"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:text="1"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:gravity="center_vertical"/>

    <!-- Hole Par -->
    <TextView
        android:id="@+id/txtv_hole_par"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="3"
        android:textSize="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/txtv_hole_number"/>

    <!-- Decrease Par button -->
    <Button
        android:id="@+id/bttn_decrease_hole_par"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="-"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/txtv_hole_par"
        android:layout_marginRight="5dp"
        android:background="@color/button_green"/>

    <!-- Increase par button -->
    <Button
        android:id="@+id/bttn_increase_hole_par"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="+"
        android:textSize="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:background="@color/button_green"
        android:layout_toRightOf="@id/bttn_decrease_hole_par"/>

</RelativeLayout>